{
  "name": "youtube-fullscreen-technique",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-scripts": "3.1.1",
    "react-video-renderer": "^2.4.3",
    "tailwindcss": "^1.1.2"
  },
  "scripts": {
    "start": "npm-run-all -p start:css start:js",
    "build": "npm-run-all build:css build:js",
    "start:js": "react-scripts start",
    "build:js": "react-scripts build",
    "start:css": "postcss src/style/tailwind.src.css -o src/style/tailwind.css -w",
    "build:css": "postcss src/style/tailwind.src.css -o src/style/tailwind.css --env production"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.2",
    "@types/react": "^16.9.2",
    "@types/react-dom": "^16.9.0",
    "typescript": "^3.5.3",
    "@fullhuman/postcss-purgecss": "^1.2.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.3",
    "purgecss": "^1.3.0"
  }
}
